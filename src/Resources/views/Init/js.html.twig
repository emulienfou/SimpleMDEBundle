<script src="//cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
<script type="text/javascript">
  {% spaceless %}
  $(function () {
    $('textarea[data-type="simplemde"]').each(function () {
      var element = $("#" + $(this).attr('id'))[0];
      var simplemde = new SimpleMDE(Object.assign({{ config|json_encode()|raw }}, {'element': element}));
    });
  });
  {% endspaceless %}
</script>
